@model Calificaciones.Models.CalificacionesModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Asignar Calificaciones</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <!-- Estudiante -->
            <div class="mb-3">
                <label asp-for="EstudianteId" class="form-label">Estudiante</label>
                <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.EstudianteId">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label class="form-label" for="CursoId">Curso</label>
                <select id="CursoId" name="CursoId" class="form-select">
                    <option value="">-- Seleccione --</option>
                    @foreach (var c in (IEnumerable<dynamic>)ViewBag.Cursos)
                    {
                        <option value="@c.Id"
                                data-creditos="@c.Creditos"
                                data-estado="@(c.Activo ? "Activo" : "Inactivo")">
                            @($"{c.Nombre} | Créditos: {c.Creditos} | {(c.Activo ? "Activo" : "Inactivo")}")
                        </option>
                    }
                </select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <div class="form-text mb-3">
                Créditos: <span id="lblCreditos">-</span> |
                Estado: <span id="lblEstado">-</span>
            </div>

            <div class="mb-3">
                <label asp-for="PeriodoId" class="form-label">Periodo</label>
                <select asp-for="PeriodoId" class="form-select" asp-items="ViewBag.PeriodoId">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="PeriodoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/calificaciones.js" asp-append-version="true"></script>
}

