<!DOCTYPE html>
@{
    ViewData["AppName"] = "Sistema de Calificaciones";
    Func<string, string?, string> IsActive = (ctrl, act) =>
    {
        var rc = ViewContext.RouteData.Values["controller"]?.ToString();
        var ra = ViewContext.RouteData.Values["action"]?.ToString();
        bool cOk = string.Equals(rc, ctrl, StringComparison.OrdinalIgnoreCase);
        bool aOk = act == null || string.Equals(ra, act, StringComparison.OrdinalIgnoreCase);
        return (cOk && aOk) ? "active" : "";
    };
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calificaciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Calificaciones.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Calificaciones</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Home", "Index")" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @IsActive("Estudiantes", null) @IsActive("Profesores", null) @IsActive("Cursos", null) @IsActive("Periodos", null)"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Catálogos
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item @IsActive("Estudiantes", "Index")" asp-controller="Estudiantes" asp-action="Index">Estudiantes</a></li>
                                <li><a class="dropdown-item @IsActive("Profesores", "Index")" asp-controller="Profesores" asp-action="Index">Profesores</a></li>
                                <li><a class="dropdown-item @IsActive("Cursos", "Index")" asp-controller="Cursos" asp-action="Index">Cursos</a></li>
                                <li><a class="dropdown-item @IsActive("Periodos", "Index")" asp-controller="Periodos" asp-action="Index">Periodos</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Calificaciones", "Index")" asp-controller="Calificaciones" asp-action="Index">Calificaciones</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Home", "Privacy")" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <a class="btn btn-outline-primary btn-sm rounded-pill px-3 shadow-sm"
                           asp-controller="Calificaciones" asp-action="Create">
                            <span class="me-1">+</span> Nueva Calificación
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Calificaciones - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
