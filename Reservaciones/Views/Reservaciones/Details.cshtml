@model Reservaciones.Models.Entidades.ReservacionesModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Información Reservación</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fecha Reservación</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaReserva)
        </dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento.Descripcion)
        </dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Apellido)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@Model?.ReservacionId">Edit</a> |
    <a asp-action="Index">Regresar al inicio</a>
</div>
