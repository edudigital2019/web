@model IEnumerable<Reservaciones.Models.Entidades.ReservacionesModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Reservación</a>
</p>
<table class="table  table-responsive table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
              @item.ReservacionId
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
               <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.ReservacionId">Editar</a>
               <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.ReservacionId">Info. Reservación</a>
               <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.ReservacionId">Elimnar</a>
            </td>
        </tr>
}
    </tbody>
</table>
